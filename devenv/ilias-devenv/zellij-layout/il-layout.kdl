layout {
  default_tab_template name="main" {
      pane size=1 borderless=true {
          plugin location="zellij:tab-bar"
      }
      children
      pane size=1 borderless=true {
          plugin location="zellij:status-bar"
      }
  }
  tab name="{{NAME}}" {
    pane split_direction="vertical" cwd="{{PROJECT_PATH}}"
    pane stacked=true {
      pane cwd="{{BASE_PATH}}" expanded=true
      pane cwd="{{BASE_PATH}}"
      pane cwd="{{BASE_PATH}}"
    }
  }
}
